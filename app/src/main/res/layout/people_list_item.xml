<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:id="@+id/peopleImageView"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_margin="5dp"
        android:gravity="center_vertical|center_horizontal"
        android:src="@drawable/teejay"
        android:scaleType="centerCrop" />


    <TextView
        android:id="@+id/peopleNameLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/peopleImageView"
        />

    <TextView
        android:id="@+id/peoplePositionLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="STEP 2015 Mentor"
        android:layout_below="@id/peopleNameLabel"
        android:layout_alignLeft="@id/peopleNameLabel"
        android:layout_alignStart="@id/peopleNameLabel"
        android:layout_marginBottom="5dp"
        />

</RelativeLayout>